        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/lista_bar_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/space_llegar"
        android:layout_alignParentStart="true">
    </ListView>

